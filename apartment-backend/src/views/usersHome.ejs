<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
   
    <form method="post" action="/users/create-user">
        <div class="container">
          <div class="col-4"></div>
          <div class="col-4"><h2>Tạo User mới </h2></div>
          <div class="col-4"></div>
            <div class="row">
        <div class="mb-3 col-6">
          <label for="Email" class="form-label">Email address</label>
          <input type="email" class="form-control" id="Email" name="email"  required aria-describedby="emailHelp">
          
        </div>
        <div class="col-6">

        </div>
        <div class="mb-3 col-6">
            <label for="username" class="form-label">name</label>
            <input type="text" name="username" class="form-control" id="username"  required>
          </div>
          <div class="col-6">

          </div>
        <div class="mb-3 col-6">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input type="password" name="password" class="form-control" id="exampleInputPassword1" required>
        </div>
        <div class="col-6">

        </div>
      <div class="mb-3 col-6">
        <label for="firstName" class="form-label">first name</label>
        <input type="text" name="firstName" class="form-control" id="firstName" required>
      </div>
        <div class="col-6"></div>
        <div class="mb-3 col-6">
          <label for="lastName" class="form-label">last name</label>
          <input type="text" name="lastName" class="form-control" id="lastName" required>
        </div>
          <div class="col-6"></div>
          <div class="mb-3 col-6">
            <label for="room" class="form-label">room</label>
            <input type="text" name="room" class="form-control" id="room" required>
          </div>
            <div class="col-6"></div>
            <div class="mb-3 col-6">
              <label for="birthDay" class="form-label">birth day</label>
              <input type="date" name="birthDay" class="form-control" id="birthDay" required>
            </div>
              <div class="col-6"></div>
              <div class="mb-3 col-6">
                <label for="sex" class="form-label">sex</label>
                <input type="text" name="sex" class="form-control" id="sex" required>
              </div>
                <div class="col-6"></div>
                <div class="mb-3 col-6">
                  <label for="phone" class="form-label">phone</label>
                  <input type="text" name="phone" class="form-control" id="phone" required>
                </div>
                  <div class="col-6"></div>
                  <div class="mb-3 col-6">
                    <label for="joinDate" class="form-label">join date</label>
                    <input type="date" name="joinDate" class="form-control" id="joinDate" required>
                  </div>
                    <div class="col-6"></div>
        <div class="col-6">
            <select class="form-select" name="acc_type" required aria-label="Default select example">
              <option value="thành viên">thành viên</option>
                <option value="nhân viên">nhân viên</option>
                <option value="chủ phòng">chủ phòng</option>
                
              </select>
    </div>
       <div class="col-12 pt-4">
        <button type="submit" class="btn btn-primary ">Submit</button>
    </div>
            </div>
        </div>
        
    </form>
    <form action="">
      <div class="container">
          <div class="row">
              <div class="user-info-container">
                  <h3 class="table-user-list">Table User List</h3>
                  <div class="table-user">
                      
                      <table class="table table-hover table-bordered">
                          <thead class="thead-dark">
                            <tr>
                              
                              <th scope="col">id</th>
                              <th scope="col">email</th>
                              <th scope="col">user name</th>
                              <th scope="col">first name</th>
                              <th scope="col">last name</th>
                              <th scope="col">password</th>
                              <th scope="col">sex</th>
                             
                              <th scope="col">sửa , xóa, chi tiết</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% userList.forEach(function(item,index){ %>
                              <tr>
                                
                                <td><%= item.id%></td>
                                <td><%= item.email%></td>
                                <td><%= item.username%></td>
                                <td><%= item.firstName%></td>
                                <td><%= item.lastName%></td>
                                <td><%= item.password%></td>
                                <td><%= item.sex%></td>
                                
                                
                                <td> 
                                  <form action="/edit-user/<%=  item.id %>" method="get" style="display: inline;">
                                    <button type="submit"  class="btn btn-warning">
                                      sửa

                                    </button>
                                </form>
                                    <form action="/delete-user/<%=  item.id %>" method="POST" style="display: inline;">
                                      <button type="submit"  class="btn btn-danger">
                                        xóa

                                      </button>
                                  </form>
                                    <button type="button" class="btn btn-info">chi tiết</button>    
                                </td>
                              </tr>
                          <% }) %>
                            
                            
                          </tbody>
                        </table>
                  </div>
              </div>
          </div>
      </div>
     
  </form>
  
</body>
</html>